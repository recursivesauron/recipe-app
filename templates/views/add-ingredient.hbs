<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Recipe App Using Heroic Features</title>

  {{>common_links}}
</head>

<body>
<div class="wrapper">
    
  {{>sidebar}}

  <!-- Page Content -->
  <div class="container-fluid" id="content">

    {{>sidebar_button}}

    <div class="container">
        <form>
            <div class="form-group">
                <label for="name">Ingredient Name</label>
                <input type="text" class="form-control" id="name" placeholder="Broccoli">
            </div>
            <div class="form-group">
                <label for="shelf-life">Shelf Life (in days)</label>
                <input type="number" class="form-control" id="shelf-life" placeholder="5">
            </div>
            <div class="form-group">
                <label for="storage-details">Storage Details</label>
                <textarea class="form-control" id="storage-details" rows="3"></textarea>
            </div>

            <div id="form-response" class="alert" role="alert"></div>

            <button type="submit" class="btn btn-primary center-button">Save</button>
        </form>
    <!-- /.container -->
    </div>
  <!-- /.container-fluid-->
  </div>
<!-- /.wrapper--> 
</div>

  

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sidebar.js"></script>
  <script src="/js/add-ingredient.js"></script>

</body>
</html>
